    <style>
        .accordion {
            background-color: white;
            color: #444;
            cursor: pointer;
            padding: 18px;
            padding-top: 0px;
            width: 100%;
            text-align: left;
            border: none;
            outline: none;
            transition: 0.4s;
            font-size: 20px;
            font-weight: 600;
            line-height: 0.1;
            letter-spacing: .4px;
            color: #404040;
        }

        /* Add a background color to the button if it is clicked on (add the .active class with JS), and when you move the mouse over it (hover) */
        .active,
        .accordion:hover {
            background-color: #ccc;
        }

        /* Style the accordion panel. Note: hidden by default */
        .panel {
            padding: 0 18px;
            background-color: white;
            display: none;
            overflow: hidden;
        }

        .panel p {
            font-size: 15px;
            line-height: 1.6;
            letter-spacing: .4px;
            color: #404040;
        }
        .faq-item{
            margin-top: 30px;
            position: relative;
        }
        .faq-item .accordion{
            background-color: transparent;
            color: white;
            font-family: Proxima-thin;
            margin-left: 27px;
            line-height: 27px;
            box-sizing: border-box;
        }
        .faq-item .panel{
            margin-left: 10px;
            display: none;
            opacity: 0;
            transition: display .1s ease-in-out, opacity .3s ease-in-out;
            background-color: transparent;
        }
        .faq-item .panel.active{
            display: block;
            opacity: 1;

        }
        .faq-item .panel p{
            font-family: Proxima-thin;
            color: white;
            border-left: 3px solid white;
            padding-left: 17px;
        }
        .faq-item .icon{
            font-size: 1.5em;
            color: white;
            position: absolute;
            top: 2px;
            width: 25px;
            height: 25px;
            border: 2px solid white;
            line-height: 20px;
            border-radius: 50%;
            text-align: center;
        }
        .address_item{
            margin-bottom: 0px !important;
            display: flex
        }
        .address_item .caption{
            font-size: 1.5em !important;
            vertical-align: baseline;
            font-family: Proxima-bold;
        }
        .address_item img{
            margin-right: 10px;
            vertical-align: middle;
        }
    </style>
    <% include partials/scripts %>
    <script>
            var acc = $(".accordion").click(function(){
            var isActive = $(this).siblings('.panel').hasClass('active')       
            
            $(".accordion").siblings('.panel').removeClass('active')    
            
            if(!isActive) {
                $(this).siblings('.panel').toggleClass('active')
            }

            var icon = $(this).siblings('.icon')
            var allIcon = $(acc).siblings('.icon')
            allIcon.removeClass('ion-ios-remove')
            if(!isActive){
                icon.addClass('ion-ios-remove')
            }
        })
        </script>

